<UserControl x:Class="admin_client.View.StaffManageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:admin_client.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1060">
    <Grid Margin="160 0 0 0">
        <TextBlock FontSize="24" FontWeight="Black" Width="840" Margin="0 30 0 0">사원 관리</TextBlock>

        <Button Click="CheckSignUpRequestBtn_Click" x:Name="CheckSignUpRequestBtn" Margin="0 50 23 0" Padding="10 5" Height="30" BorderBrush="#8c8c8c" BorderThickness="2" Background="#D9D9D9" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Span>
                <Run>가입 요청</Run>
                <Run x:Name="SignUpRequestCount" Text="0">
                    <Run.Style>
                        <Style TargetType="Run">
                            <Setter Property="Foreground" Value="#3AC7CD"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="TextDecorations" Value="Underline"/>
                        </Style>
                    </Run.Style>
                </Run>
            </Span>
        </Button>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Width="840" Margin="0 85 0 0">
            <StackPanel Orientation="Horizontal" Width="780">
                <TextBlock Text="ID" Margin="0 0 10 0" FontSize="15" VerticalAlignment="Center"></TextBlock>
                <Border Width="150" Height="30" BorderThickness="2" BorderBrush="#8C8C8C" Margin="0 0 50 0" Padding="10 0">
                    <TextBox BorderThickness="0" x:Name="FilterIdBox" Background="Transparent" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="35" Width="840"></TextBox>
                </Border>
                <TextBlock Text="직급" Margin="0 0 10 0" FontSize="14" VerticalAlignment="Center"></TextBlock>
                <Border Width="150" Height="30" BorderThickness="2" BorderBrush="#8C8C8C" Margin="0 0 50 0" Padding="10 0 ">
                    <TextBox BorderThickness="0" x:Name="FilterPositionBox" Background="Transparent" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="35" Width="840"></TextBox>
                </Border>
                <TextBlock Text="이름" Margin="0 0 10 0" FontSize="14" VerticalAlignment="Center"></TextBlock>
                <Border Width="150" Height="30" BorderThickness="2" BorderBrush="#8C8C8C" Margin="0 0 50 0" Padding="10 0 ">
                    <TextBox BorderThickness="0" x:Name="FilterNameBox" Background="Transparent" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="35" Width="840"></TextBox>
                </Border>
            </StackPanel>
            <Button Click="UserFilterButton_Click" Width="60" Height="30" BorderBrush="#8c8c8c" BorderThickness="2" Background="#D9D9D9" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0">조회</Button>
        </StackPanel>

        <DataGrid IsReadOnly="True" AutoGenerateColumns="False" RowHeaderWidth="0" RowBackground="Transparent" Foreground="#686868" BorderThickness="2" BorderBrush="#8c8c8c" Background="Transparent" Width="840" Height="420" Margin="0 0 0 20" VerticalAlignment="Bottom" ItemsSource="{Binding UserDataList}">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0 0 0 1"></Setter>
                    <Setter Property="BorderBrush" Value="#8c8c8c"></Setter>
                    <Setter Property="Padding" Value="5 5"/>
                    <Setter Property="FontSize" Value="13"></Setter>
                    <Setter Property="FontWeight" Value="ExtraBold"></Setter>
                    <Setter Property="Foreground" Value="#686868"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"></Setter>
                    <EventSetter Event="MouseDoubleClick" Handler="UserData_MouseDoubleClick"></EventSetter>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment"   Value="Center"/>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Width="1.2*" Header="사번" Binding="{Binding Id}" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#4B90FF"></Setter>
                            <Setter Property="TextDecorations" Value="Underline"></Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="1*" Header="이름" Binding="{Binding Name}" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="1*" Header="직급" Binding="{Binding Position}" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="0.5*" Header="나이" Binding="{Binding Age}" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="2*" Header="이메일" Binding="{Binding Email}" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="2*" Header="주소" Binding="{Binding Address}" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="2*" Header="입사일" Binding="{Binding CreatedAt}" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
