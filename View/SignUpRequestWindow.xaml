<Window x:Class="admin_client.View.SignUpRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:admin_client.View"
        mc:Ignorable="d"
        Background="#e1e1e1"
        Title="SignUpRequestWindow" Height="450" Width="390">
    <Grid>
        <ListBox x:Name="RequestListBox"
         Width="390"
         HorizontalAlignment="Center"
         VerticalAlignment="Top">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <!-- 한 줄당 높이 50px 고정 -->
                    <Setter Property="Height" Value="50"/>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5"
                  Width="350"
                  VerticalAlignment="Center">
                        <!-- Grid도 가운데 정렬 -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Padding="20 0 0 0"
                           VerticalAlignment="Center"
                           Text="{Binding TempEmpId}"
                           Foreground="Black"
                           TextTrimming="CharacterEllipsis"/>

                        <!-- Margin="5,0" 로 좌우 간격만 -->
                        <Button Grid.Column="1"
                        Content="거절"
                        Tag="{Binding TempEmpId}"
                        Click="DenyBtn_Click"
                        Margin="5,0"
                        Padding="10,5"
                        Height="30"
                        Width="50"
                        VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                        BorderBrush="#8c8c8c"
                        BorderThickness="2"
                        Background="#D9D9D9"/>

                        <Button Grid.Column="2"
                        Content="수락"
                        Tag="{Binding TempEmpId}"
                        Click="AllowBtn_Click"
                        Margin="5,0,0,0"
                        Padding="10,5"
                        Height="30"
                        Width="50"
                        VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                        BorderBrush="#8c8c8c"
                        BorderThickness="2"
                        Background="#D9D9D9"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
