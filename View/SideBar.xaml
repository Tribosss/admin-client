<UserControl x:Class="admin_client.View.SideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:admin_client.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="170" VerticalAlignment="Center" HorizontalAlignment="Left">
    <Border BorderBrush="#A4A4A4"
        BorderThickness="0 0 2 0">
        <Grid Background="#D9D9D9" Height="600" Width="160">
            <Image Source="/Src/Image/TribossLogo.png" Width="130" Height="130" VerticalAlignment="Top" HorizontalAlignment="Center"></Image>
            <Button Click="DashBoardNav_Click" Background="#D9D9D9" Margin="0 130 0 0" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Src/Image/DashBoardIcon.png" Width="25" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center"></Image>
                    <TextBlock Margin="10 5 0 0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="12" >대시보드</TextBlock>
                </StackPanel>
            </Button>
            <Button Click="PolicyNav_Click" Background="#D9D9D9" Margin="0 160 0 0" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Src/Image/SetPolicyIcon.png" Width="25" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center"></Image>
                    <TextBlock Margin="6 5 0 0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="12" >정책 설정</TextBlock>
                </StackPanel>
            </Button>
            <Button Click="LogViewNav_Click" Background="#D9D9D9" Margin="0 190 0 0" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Src/Image/LogViewIcon.png" Width="25" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center"></Image>
                    <TextBlock Margin="6 5 0 0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="12" >로그 조회</TextBlock>
                </StackPanel>
            </Button>
            <Button Click="StaffManageNav_Click" Background="#D9D9D9" Margin="0 220 0 0" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Src/Image/StaffManageIcon.png"  Width="25" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center"></Image>
                    <TextBlock Margin="6 5 0 0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="12">사원 관리</TextBlock>
                </StackPanel>
            </Button>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0 0 0 60">
                <Image Source="/Src/Image/ProfileIcon.png"  Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Margin="6 5 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Name="EmpId" FontSize="11">사번: </TextBlock>
                    <TextBlock Margin="6 5 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Name="Position"  FontSize="11">직급: 관리자</TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
