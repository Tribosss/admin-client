<UserControl x:Class="admin_client.View.ViewLogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:admin_client.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1060">
    <Grid Margin="160 0 0 0">
        <TextBlock FontSize="24" FontWeight="Black" Width="840" Margin="0 30 0 0">로그 조회</TextBlock>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Width="840" Margin="0 85 0 0">
            <Border Width="770" Height="35" BorderThickness="2" BorderBrush="#8C8C8C" Margin="0 0 10 0" Padding="10 0 ">
                <TextBox BorderThickness="0"  TextChanged="UserSearchBox_TextChanged" x:Name="UserSearchBox" Background="Transparent" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="35" Width="840"></TextBox>
            </Border>
            <Button Click="UserSearchButton_Click" Width="60" Height="35" BorderBrush="#8c8c8c" BorderThickness="2" Background="#D9D9D9">조회</Button>
        </StackPanel>
        <Canvas Panel.ZIndex="3">
            <ItemsControl Width="770" Margin="24 120 0 0" LostFocus="UserList_LostFocus" Name="SearchUserList" Visibility="Hidden" ItemsSource="{Binding UserDataList}" Background="#e1e1e1" Panel.ZIndex="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border MouseLeftButtonDown="Border_MouseLeftButtonDown" Background="#e9e9e9" Width="770" Padding="10 2">
                            <TextBlock FontSize="14" Margin="0,4">
                        <Run Text="["/>         
                        <Run Text="{Binding Position}"/>
                        <Run Text="] "/>
                        <Run Text="{Binding Name}"/>
                        <Run Text=" ("/>
                        <Run Text="{Binding Id}"/>
                        <Run Text=")"/>
                            </TextBlock>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>
        <Border BorderBrush="#8C8C8C" BorderThickness="2" Width="840" Height="35" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 125 0 0" Padding="30 0">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Src/Image/ProfileIcon.png" Margin="0 0 50 0" Width="25"></Image>
                
                <TextBlock VerticalAlignment="Center" FontWeight="bold" Margin="0 0 10 0">사원명</TextBlock>
                <TextBlock x:Name="SelectedName" VerticalAlignment="Center" Text="" Margin="0 0 50 0"></TextBlock>
                
                <TextBlock VerticalAlignment="Center" FontWeight="bold" Margin="0 0 10 0">직급</TextBlock>
                <TextBlock x:Name="SelectedPosition" VerticalAlignment="Center" Text=""></TextBlock>
            </StackPanel>
        </Border>
        <Border Width="840" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 180 0 0" Panel.ZIndex="1" BorderThickness="2 2 2 0" BorderBrush="#8c8c8c">
            <Grid Width="810" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="메시지" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" Text="출발지" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Column="2" Text="목적지" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Column="3" Text="기록일" HorizontalAlignment="Center" FontWeight="Bold"/>
            </Grid>
        </Border>
        <ListBox x:Name="LogList" ItemsSource="{Binding Logs}" Width="840" Height="335" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0 0 0 20" Background="#505050">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5" Width="810">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.5*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                           HorizontalAlignment="Center" 
                           Text="{Binding Msg}"
                           Foreground="White"
                           TextWrapping="Wrap" />

                        <TextBlock Grid.Column="1"
                           Text="{Binding Source}"
                           Foreground="White"
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap" />

                        <TextBlock Grid.Column="2"
                           Text="{Binding Destination}"
                           HorizontalAlignment="Center" 
                           Foreground="White"
                           TextWrapping="Wrap" />

                        <TextBlock Grid.Column="3"
                           Text="{Binding DetectedAt}"
                           HorizontalAlignment="Center" 
                           Foreground="White"
                           TextWrapping="Wrap" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
