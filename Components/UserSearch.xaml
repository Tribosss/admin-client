<UserControl x:Class="admin_client.Components.UserSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:admin_client.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="900">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Width="840">
            <Border Width="770" Height="35" BorderThickness="1" BorderBrush="#8C8C8C" Margin="0 0 10 0">
                <TextBox TextChanged="UserSearchBox_TextChanged" x:Name="UserSearchBox"></TextBox>
            </Border>
            <Button Click="UserSearchButton_Click" Width="60" Height="35" BorderBrush="#8c8c8c" BorderThickness="2" Background="#D9D9D9">조회</Button>
        </StackPanel>
        <ListBox SelectionChanged="UserList_SelectionChanged" Margin="0 35 70 0" Width="770" x:Name="UserList" BorderThickness="0"></ListBox>
    </Grid>
</UserControl>
